<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/saltfond"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <ProgressBar
        android:id="@+id/lvlBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:indeterminate="false"
        android:max="100" />

    <TextView
        android:id="@+id/etPseudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfcomicscriptnormal"
        android:text="Pseudo"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/Bienvenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/sfcomicscriptshaded"
        android:text="Bienvenue!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textSize="34sp" />

    <Button
        android:id="@+id/buttonJouer"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@android:color/white"
        android:fontFamily="@font/sfcomicscriptnormal"
        android:text="Jouer"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="22sp" />

    <Button
        android:id="@+id/buttonAides"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@android:color/white"
        android:fontFamily="@font/sfcomicscriptnormal"
        android:text="Aides"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="22sp" />

    <Button
        android:id="@+id/buttonScores"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@android:color/white"
        android:fontFamily="@font/sfcomicscriptnormal"
        android:text="Scores"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:fontFamily="@font/sfcomicscriptnormal"
        android:text="Profil"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp" />
</LinearLayout>