<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/saltfond"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/etEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfcomicscriptnormal"
        android:text="Pseudo"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/Bienvenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="6dp"
        android:fontFamily="@font/sfcomicscriptshaded"
        android:text="Bienvenue!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textSize="34sp" />

    <Button
        android:id="@+id/pommes"
        android:background="@drawable/button"
        android:textColor="@drawable/textbutton"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="3dp"
        android:fontFamily="@font/sfcomicscriptnormal"
        android:text="Pommes"
        android:textSize="22sp" />



    <Button
        android:id="@+id/tindNumberAdd"
        android:background="@drawable/button"
        android:textColor="@drawable/textbutton"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="3dp"
        android:fontFamily="@font/sfcomicscriptnormal"
        android:text="Addition"
        android:textSize="22sp" />

    <Button
        android:id="@+id/tindNumberSub"
        android:background="@drawable/button"
        android:textColor="@drawable/textbutton"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="3dp"
        android:fontFamily="@font/sfcomicscriptnormal"
        android:text="Soustraction"
        android:textSize="22sp" />

    <Button
        android:id="@+id/tindNumberComp"
        android:background="@drawable/button"
        android:textColor="@drawable/textbutton"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="3dp"
        android:fontFamily="@font/sfcomicscriptnormal"
        android:text="Comparaison"
        android:textSize="22sp" />

    <Button
        android:id="@+id/tindNumberMul"
        android:background="@drawable/button"
        android:textColor="@drawable/textbutton"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="3dp"
        android:fontFamily="@font/sfcomicscriptnormal"
        android:text="Multiplication"
        android:textAlignment="center"
        android:textSize="22sp" />

    <Button
        android:id="@+id/buttonAides"
        android:background="@drawable/button"
        android:textColor="@drawable/textbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="3dp"
        android:fontFamily="@font/sfcomicscriptnormal"
        android:text="Aides"
        android:textSize="22sp" />


    <ProgressBar
        android:id="@+id/lvlBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="6dp"
        android:progressTint="@color/colorAccent" />

    <TextView
        android:id="@+id/avancement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/sfcomicscriptnormal"
        android:text="0"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/refresh"
        android:background="@drawable/button"
        android:textColor="@drawable/textbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="3dp"
        android:fontFamily="@font/sfcomicscriptnormal"
        android:text="Refresh"
        android:textSize="22sp" />

</LinearLayout>