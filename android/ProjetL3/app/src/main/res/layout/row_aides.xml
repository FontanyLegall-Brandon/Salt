<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="10dp" >

    <ImageView android:id="@+id/icon" android:layout_width="50dp" android:layout_height="50dp" tools:background="#AAA" />

    <TextView android:id="@+id/intitule" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/black" android:layout_marginStart="10dp" android:layout_toRightOf="@+id/icon" android:layout_alignTop="@+id/icon" android:textStyle="bold" tools:text="Aide sur..." />

    <TextView android:id="@+id/description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/black" android:layout_alignStart="@+id/intitule" android:layout_below="@+id/intitule" tools:text="Description du contenu de l'aide." />

</RelativeLayout>