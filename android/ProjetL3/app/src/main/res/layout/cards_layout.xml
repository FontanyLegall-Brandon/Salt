<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:style="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/saltfond"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.lorentzos.flingswipe.SwipeFlingAdapterView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/frame"
        android:layout_width="wrap_content"
        android:layout_height="315dp"
        app:max_visible="4"
        app:min_adapter_stack="6"
        app:rotation_degrees="16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="151dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:contentDescription="@string/swipeLeft"
            android:scaleType="fitStart"
            android:src="@drawable/iffalse"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/thumbs"
            android:src="@drawable/thumbsup" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="151dp"
            android:layout_weight="1"
            android:contentDescription="@string/swipeRight"
            android:scaleType="fitEnd"
            android:src="@drawable/iftrue"
            android:visibility="visible" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonRet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/sfcomicscriptnormal"
        android:text="@string/retour"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="22sp" />

</LinearLayout>
