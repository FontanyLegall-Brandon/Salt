<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:style="http://schemas.android.com/tools"
    android:background="@drawable/saltfond"
    android:orientation="vertical">

    <com.lorentzos.flingswipe.SwipeFlingAdapterView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/frame"
        android:layout_width="wrap_content"
        android:layout_height="315dp"
        app:max_visible="4"
        app:min_adapter_stack="6"
        app:rotation_degrees="16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="151dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:contentDescription="@string/swipeLeft"
            android:scaleType="fitStart"
            android:visibility="visible"
            android:src="@drawable/iffalse" />

        <ImageView
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/thumbs"
            app:srcCompat="@drawable/thumbsup" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="151dp"
            android:layout_weight="1"
            android:contentDescription="@string/swipeRight"
            android:scaleType="fitEnd"
            android:visibility="visible"
            android:src="@drawable/iftrue" />
    </LinearLayout>

</LinearLayout>
